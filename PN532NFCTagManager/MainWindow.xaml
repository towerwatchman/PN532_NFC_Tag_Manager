<Window x:Class="NFC_Tag_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NFC Tag Manager"
        Height="600"
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Top Panel -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="5">
            <ComboBox x:Name="SerialPortComboBox"
                      Width="100"
                      Margin="5"
                      SelectionChanged="SerialPortComboBox_SelectionChanged" />
            <Button x:Name="ConnectButton"
                    Content="Connect"
                    Width="100"
                    Margin="5"
                    Click="ConnectButton_Click" />
            <TextBlock x:Name="DeviceNameTextBlock"
                       Margin="5"
                       VerticalAlignment="Center" />
            <TextBlock x:Name="DriverTextBlock"
                       Margin="5"
                       VerticalAlignment="Center" />
        </StackPanel>
        <!-- Main Content -->
        <Grid Grid.Row="1"
              Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!-- Left Panel: Tag Info and Log -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Tag Information"
                           FontWeight="Bold"
                           Margin="0,0,0,5" />
                <TextBox x:Name="TagInfoTextBlock"
                         Height="200"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,10" />
                <TextBlock Text="Log"
                           FontWeight="Bold"
                           Margin="0,0,0,5" />
                <TextBox x:Name="LogTextBox"
                         Height="200"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto" />
            </StackPanel>
            <!-- Right Panel: Indicators -->
            <StackPanel Grid.Column="1"
                        Margin="10,0,0,0">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <Ellipse x:Name="AwakeIndicator"
                             Width="10"
                             Height="10"
                             Fill="Gray"
                             Margin="0,0,5,0" />
                    <TextBlock Text="Awake" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <Ellipse x:Name="SamConfigIndicator"
                             Width="10"
                             Height="10"
                             Fill="Gray"
                             Margin="0,0,5,0" />
                    <TextBlock Text="SAM Config" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <Ellipse x:Name="FirmwareIndicator"
                             Width="10"
                             Height="10"
                             Fill="Gray"
                             Margin="0,0,5,0" />
                    <TextBlock Text="Firmware" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <Ellipse x:Name="StatusIndicator"
                             Width="10"
                             Height="10"
                             Fill="Gray"
                             Margin="0,0,5,0" />
                    <TextBlock Text="Status" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <Ellipse x:Name="PassiveTargetIndicator"
                             Width="10"
                             Height="10"
                             Fill="Gray"
                             Margin="0,0,5,0" />
                    <TextBlock Text="Passive Target" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <Ellipse x:Name="WakeupIndicator"
                             Width="10"
                             Height="10"
                             Fill="Gray"
                             Margin="0,0,5,0" />
                    <TextBlock Text="Wakeup" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <Ellipse x:Name="CommandIndicator"
                             Width="10"
                             Height="10"
                             Fill="Gray"
                             Margin="0,0,5,0" />
                    <TextBlock Text="Command" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <!-- Bottom Panel: Controls -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="5">
            <Button x:Name="ReadButton"
                    Content="Read"
                    Width="100"
                    Margin="5"
                    Click="ReadButton_Click" />
            <Button x:Name="StopReadingButton"
                    Content="Stop Reading"
                    Width="100"
                    Margin="5"
                    Click="StopReadingButton_Click" />
            <Button x:Name="WriteButton"
                    Content="Write"
                    Width="100"
                    Margin="5"
                    Click="WriteButton_Click" />
            <TextBox x:Name="WriteDataTextBox"
                     Width="200"
                     Margin="5" />
        </StackPanel>
    </Grid>
</Window>