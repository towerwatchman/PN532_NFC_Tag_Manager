<Window x:Class="NFC_Tag_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NFC Tag Creator"
        Height="600"
        Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Serial Port Selection -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0,0,0,10">
            <Label Content="Select Serial Port:" />
            <ComboBox x:Name="SerialPortComboBox"
                      Width="150"
                      Margin="5,0,0,0"
                      SelectionChanged="SerialPortComboBox_SelectionChanged" />
            <TextBlock x:Name="DriverTextBlock"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center" />
            <TextBlock x:Name="DeviceNameTextBlock"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center" />
            <Button x:Name="ConnectButton"
                    Content="Connect"
                    Width="80"
                    Margin="10,0,0,0"
                    Click="ConnectButton_Click"
                    IsEnabled="False" />
        </StackPanel>
        <!-- Connection Status Indicators -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0,0,0,10">
            <Label Content="Awake:" />
            <Ellipse x:Name="AwakeIndicator"
                     Width="10"
                     Height="10"
                     Fill="Gray"
                     Margin="5,0,10,0" />
            <Label Content="SAM Config:" />
            <Ellipse x:Name="SamConfigIndicator"
                     Width="10"
                     Height="10"
                     Fill="Gray"
                     Margin="5,0,10,0" />
            <Label Content="Firmware:" />
            <Ellipse x:Name="FirmwareIndicator"
                     Width="10"
                     Height="10"
                     Fill="Gray"
                     Margin="5,0,10,0" />
            <Label Content="Status:" />
            <Ellipse x:Name="StatusIndicator"
                     Width="10"
                     Height="10"
                     Fill="Gray"
                     Margin="5,0,10,0" />
            <Label Content="Passive Target:" />
            <Ellipse x:Name="PassiveTargetIndicator"
                     Width="10"
                     Height="10"
                     Fill="Gray"
                     Margin="5,0,10,0" />
        </StackPanel>
        <!-- Log Text Box -->
        <TextBox x:Name="LogTextBox"
                 Grid.Row="2"
                 Height="300"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Visible"
                 Margin="0,0,0,10" />
        <!-- NFC Read/Write Controls -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    Margin="0,0,0,10">
            <Button x:Name="ReadButton"
                    Content="Read"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="ReadButton_Click"
                    IsEnabled="False" />
            <Button x:Name="WriteButton"
                    Content="Write"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="WriteButton_Click"
                    IsEnabled="False" />
            <Label Content="Write Data:" />
            <TextBox x:Name="WriteDataTextBox"
                     Width="200"
                     Margin="5,0,0,0" />
        </StackPanel>
    </Grid>
</Window>